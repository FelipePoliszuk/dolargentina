---
const title = Astro.props.title;
---


<div class="rounded-lg border-2 bg-green-50 border-green-200 p-6 shadow-sm transition-transform hover:scale-[1.02] ">
    <h2 class="text-xl font-bold text-green-700">{title}</h2>
    
    <div class="mt-4 grid grid-cols-2 gap-4">
      <div class="rounded-md bg-white p-4 shadow-sm">
        <div class="flex items-center gap-1 text-sm font-medium text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="arrow-down" class="lucide lucide-arrow-down h-4 w-4 text-green-600"><path d="M12 5v14"></path><path d="m19 12-7 7-7-7"></path></svg>
          <span>Compra</span>
        </div>
        <div class="text-black  mt-2 text-2xl font-bold">$&nbsp;1.250,00</div>
      </div>
      
      <div class="rounded-md bg-white p-4 shadow-sm">
        <div class="flex items-center gap-1 text-sm font-medium text-gray-500">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" data-lucide="arrow-up" class="lucide lucide-arrow-up h-4 w-4 text-red-600"><path d="m5 12 7-7 7 7"></path><path d="M12 19V5"></path></svg>
          <span>Venta</span>
        </div>
        <div class="text-black mt-2 text-2xl font-bold">$&nbsp;1.290,00</div>
      </div>
    </div>
  </div>
